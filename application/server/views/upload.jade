doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1= title
     form(method='POST' action='/upload' encType="multipart/form-data")
          div.form-group
            label(for='name') File:
            input.form-control(type='file', name='file')
          div.form-group
            label(for='name') Preview:
            input.form-control(type='file', name='preview')
          div.form-group
            input.form-control(type='text' placeholder='title' name='title')
          div.form-group
            input.form-control(type='text' placeholder='description' name='description')
          div.form-group
            select.form-control(type='text', name='category')
              option(value='document') Document
              option(value='image') Image
              option(value='video') Video
              option(value='audio') Audio
          button.btn.btn-primary(type='submit') Submit