doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1= title
     form(method='POST' action='/register')
          div.form-group
            label(for='name') Username:
            input#name.form-control(type='text', placeholder='first and last' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@mail.sfsu.edu' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up
    a(href="/login") login